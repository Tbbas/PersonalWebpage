<div class="card" style="background-color: RGBA(0, 0, 0,0.5);">
  <img class="card-img-top" src=<%= wish.image %> alt="<%= wish.name %> image" >
  <div class="card-body" style="padding: 0px;">
  	<div class="card-block">
  	<a href="<%=wish_path(wish)%>"><h4 class="card-title text-center text-light roboto"><%= wish.name %></h4></a>
    <h5 class="card-text text-center text-light raleway">~<%=wish.price %> :-</h5>
	</div>
  <br>
  <div class="card-block text-center" style="margin: 0px;">
    <a href="<%= wish_path(wish) %>" class="btn btn-info" style="width:28%;">i</a>
    <a href="<%=wish.link %>" class="btn btn-success" style="width:70%;">Till produkt -></a>
  </div>
<% if admin_signed_in?  %>
    <%= link_to "Radera", wish_path(wish), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }, class:"btn btn-danger" %>
<% end %>
  </div>
</div>
